<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="86.0dip"
    android:background="@color/backgroundcolor_white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/list_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_paying"
            android:layout_width="4.0dip"
            android:layout_height="fill_parent"
            android:background="#ff59aeef"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="160.0dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_resource_name"
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="1"
                android:paddingBottom="1.0dip"
                android:paddingLeft="4.0dip"
                android:paddingTop="8.0dip"
                android:singleLine="true"
                android:textColor="#ff334046"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/text_resource_songer"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:lineSpacingExtra="1.0dip"
                android:maxLines="1"
                android:paddingBottom="4.0dip"
                android:paddingLeft="6.0dip"
                android:paddingTop="3.0dip"
                android:textColor="#ff909da2"
                android:textSize="12.0sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_soundplay"
            android:layout_width="30.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/cmmusic_shiting"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_soundbuy"
        android:layout_width="30.0dip"
        android:layout_height="40.0dip"
        android:layout_marginLeft="22.0dip"
        android:background="@drawable/cmmusic_buy"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10.0dip" />

    <ImageView
        android:layout_width="18.0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="4.0dip" />
</LinearLayout>