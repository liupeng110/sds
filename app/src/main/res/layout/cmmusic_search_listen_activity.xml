<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cmmusic_page_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/menu_backgroundcolor"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_searchkey_searchpage"
            android:layout_width="45.0dip"
            android:layout_height="30.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="14.0"
            android:background="@drawable/cmmusic_edittext_background"
            android:paddingBottom="1.0dip"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:paddingTop="1.0dip"
            android:singleLine="true"
            android:textColor="#ff464646" />

        <Button
            android:id="@+id/btn_submit_searchpage_submit"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_weight="2.0"
            android:background="#ffeff5f7"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="#ff464646"
            android:textSize="18.0sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="#ffd0d3d6" />

    <ListView
        android:id="@+id/list_recommend_searchpage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alwaysDrawnWithCache="true"
        android:background="@drawable/cmmusic_page_background"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#ffc7dae1"
        android:dividerHeight="1.0px"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:visibility="gone" />

    <ListView
        android:id="@+id/list_searchpage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alwaysDrawnWithCache="true"
        android:background="@drawable/cmmusic_page_background"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#ffc7dae1"
        android:dividerHeight="1.0px"
        android:listSelector="@android:color/transparent"
        android:scrollingCache="false"
        android:visibility="gone" />
</LinearLayout>