<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/unicom_flow_background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:lineSpacingExtra="6.0dip"
        android:text="通过中国联通检测到"
        android:textColor="#ff666666"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:background="#fff9f9f9"
        android:orientation="horizontal"
        android:paddingBottom="16.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="16.0dip">

        <TextView
            android:id="@+id/textview_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:text="手机号:10000000000"
            android:textColor="#ff666666"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/textview_modify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:text="修改> >"
            android:textColor="#fff1605e"
            android:textSize="12.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="32.0dip"
        android:text="@string/unicom_phone_change"
        android:textColor="#ff9c9c9c"
        android:textSize="13.0sp" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/unicom_open_button"
        android:text="确认开通"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <LinearLayout
        android:id="@+id/layout_month_end_hint_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/unicom_month_end_info" />

        <TextView
            android:id="@+id/textview_month_end_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5.0dip"
            android:textColor="#ff9c9c9c"
            android:textSize="13.0sp" />
    </LinearLayout>
</LinearLayout>