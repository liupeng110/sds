<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/select_channel_dimension_margin_top_bottom"
    android:layout_marginTop="@dimen/select_channel_dimension_margin_top_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/select_dimension_name_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:gravity="center_vertical">

        <View
            android:id="@+id/select_dimension_indicate"
            android:layout_width="3.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:background="#ff489cdd" />

        <TextView
            android:id="@+id/select_dimension_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/select_dimension_indicate"
            android:textColor="#ff444a50"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/select_dimension_grid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_dimension_name_container"
        android:layout_margin="13.0dip"
        android:layout_marginLeft="@dimen/post_introduction_margin_left_right"
        android:layout_marginRight="@dimen/post_introduction_margin_left_right"
        android:background="@color/transparent"
        android:horizontalSpacing="3.0dip"
        android:listSelector="@color/transparent"
        android:numColumns="5"
        android:verticalSpacing="3.0dip" />
</RelativeLayout>