<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="53.0dip"
    android:background="#ff1d1f1f"
    android:minHeight="@dimen/list_item_height">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="fill_parent"
        android:layout_height="51.0dip"
        android:background="@drawable/recommand_bj_xml">

        <RelativeLayout
            android:id="@+id/myeffect_left"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4.0dip">

            <ImageView
                android:id="@+id/head_playstatus"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/myeffect_item_hit"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myeffect_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myeffect_left">

            <LinearLayout
                android:id="@+id/myeffect_gequ"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <com.sds.android.ttpod.framework.modules.skin.view.AutoScrollableTextView
                    android:id="@+id/textview_effect_equalizer_media"
                    android:layout_width="140.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6.0dip"
                    android:layout_marginRight="2.0dip"
                    android:drawablePadding="4.0dip"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="sdfd"
                    android:textColor="#ffffffff"
                    android:textSize="14.0sp"
                    app:autoScrollEnable="true" />

                <TextView
                    android:id="@+id/music_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2.0dip"
                    android:ellipsize="end"
                    android:paddingLeft="6.0dip"
                    android:singleLine="true"
                    android:text="dfsdfsdf"
                    android:textColor="#80ffffff"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6.0dip">

                <TextView
                    android:id="@+id/textview_effect_equalizer_content"
                    android:layout_width="160.0dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6.0dip"
                    android:drawableRight="@drawable/xml_background_eq_match"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#a0ffffff"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>