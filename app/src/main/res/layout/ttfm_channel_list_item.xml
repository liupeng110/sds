<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttpod="http://schemas.android.com/apk/res/com.sds.android.ttpod"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10.0dip"
    android:paddingTop="10.0dip">

    <FrameLayout
        android:layout_width="80.0dip"
        android:layout_height="80.0dip">

        <com.sds.android.ttpod.widget.RoundedImageView
            android:id="@+id/channel_item_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:contentDescription="@android:string/unknownName"
            android:scaleType="centerCrop"
            android:src="@drawable/img_music_default_icon"
            ttpod:corner_radius="4.0dip" />

        <ImageView
            android:id="@+id/channel_item_play"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_gravity="bottom|center|right"
            android:layout_marginBottom="2.0dip"
            android:layout_marginRight="2.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_rank_play_normal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/channel_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="奔跑"
            android:textColor="#ff2e2e2e"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="歌曲数量："
            android:textColor="#ffaaaaaa"
            android:textSize="12.0sp" />
    </LinearLayout>
</LinearLayout>