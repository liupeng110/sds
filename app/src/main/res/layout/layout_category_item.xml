<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttpod="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="8.0dip">

    <com.sds.android.ttpod.widget.ThemeThumbnailView
        android:id="@+id/imageview_thumb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_skin_default_thumbnail"
        ttpod:heightFactor="3.2"
        ttpod:widthFactor="5.0" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_alignBottom="@+id/imageview_thumb"
        android:background="@color/market_game_tucao_background_color" />

    <TextView
        android:id="@+id/category_name"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_alignBottom="@+id/imageview_thumb"
        android:fadingEdge="horizontal"
        android:gravity="center"
        android:lines="1"
        android:singleLine="true"
        android:text="@string/unknown"
        android:textColor="#ffffffff"
        android:textSize="12.0sp" />
</RelativeLayout>