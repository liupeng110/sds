<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/palying_list_title_area"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip">

    <TextView
        android:id="@+id/textview_playing"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:text="@string/playlist_with_count"
        android:textColor="@color/dialog_title"
        android:textSize="20.0sp" />

    <ImageButton
        android:id="@+id/imagebutton_playmode"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/xml_background_action_view"
        android:gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/img_playmode_sequence_playinglist" />
</RelativeLayout>