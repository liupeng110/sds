<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    android:padding="4.0dip">

    <com.sds.android.ttpod.widget.UserAvatarView
        android:id="@+id/user_avatar"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_centerVertical="true"
        android:contentDescription="@string/ttpod"
        android:scaleType="fitXY"
        android:src="@drawable/img_avatar_default"
        app:corner_radius="36.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_avatar">

        <TextView
            android:id="@+id/user_name"
            style="@style/MusicCircle_ListItem_Title"
            android:layout_width="fill_parent"
            android:layout_height="24.0dip"
            android:layout_marginLeft="4.0dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/user_extra_info_1"
            style="@style/ListItem_Description1"
            android:layout_width="fill_parent"
            android:layout_height="18.0dip"
            android:layout_below="@+id/user_name"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="2.0dip"
            android:drawablePadding="4.0dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/user_extra_info_2"
            style="@style/ListItem_Description2"
            android:layout_width="fill_parent"
            android:layout_height="18.0dip"
            android:layout_below="@+id/user_extra_info_1"
            android:layout_marginLeft="4.0dip"
            android:drawablePadding="4.0dip"
            android:singleLine="true" />
    </RelativeLayout>
</RelativeLayout>