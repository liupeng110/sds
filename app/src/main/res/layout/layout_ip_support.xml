<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffdfdfdf">

    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divide_line"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/ttpod"
        android:scaleType="centerInside"
        android:src="@drawable/img_ip_restrict" />

    <TextView
        android:id="@+id/restrict_ip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line"
        android:layout_centerHorizontal="true"
        android:layout_margin="6.0dip"
        android:text="@string/restrict_ip_title"
        android:textColor="#ff1f1f1f"
        android:textSize="24.0sp" />

    <TextView
        android:id="@+id/restrict_ip_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restrict_ip_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="6.0dip"
        android:text="@string/restrict_ip_detail"
        android:textColor="#ff3f3f3f"
        android:textSize="16.0sp" />
</RelativeLayout>