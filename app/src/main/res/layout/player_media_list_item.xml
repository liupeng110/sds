<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_list_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/xml_background_media_group_list_item_transparent_glass">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="83.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_view"
            style="@style/ListView_Item_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:text="title" />

        <TextView
            android:id="@+id/media_item_singer"
            style="@style/ListView_Item_Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtitle" />
    </LinearLayout>

    <com.sds.android.ttpod.framework.modules.skin.view.Animation
        android:id="@+id/play_icon"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.0dip"
        android:contentDescription="@string/ttpod"
        android:padding="@dimen/spectrum_padding"
        android:visibility="invisible" />
</RelativeLayout>