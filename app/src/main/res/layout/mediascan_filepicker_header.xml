<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_mediascan_filepicker_item_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12.0dip"
        android:background="@drawable/img_imageview_mediascan_item_folder_return"
        android:maxHeight="44.0dip"
        android:maxWidth="44.0dip" />

    <com.sds.android.ttpod.framework.modules.skin.view.AutoScrollableTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/textview_mediascan_filepicker_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textview_mediascan_filepicker_item_folder"
        android:ellipsize="marquee"
        android:gravity="left"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#ff222222"
        android:textSize="16.0sp"
        app:autoScrollEnable="true" />
</RelativeLayout>