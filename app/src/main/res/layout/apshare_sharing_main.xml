<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff5fdfd"
    android:orientation="vertical">

    <com.sds.android.ttpod.widget.StateView
        android:id="@+id/stateview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        app:nodata_view="@layout/apshare_sharing_waiting"
        app:success_view="@layout/apshare_sharing" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8.0dip">

        <TextView
            android:id="@+id/tv_stop_share"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_apshare_red"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/share_stop"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/tv_connected"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_apshare_blue"
            android:gravity="center"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/share_connected_device"
            android:textColor="#ffffffff"
            android:textSize="20.0sp" />
    </LinearLayout>
</LinearLayout>