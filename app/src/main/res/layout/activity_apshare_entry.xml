<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.sds.android.ttpod.common.widget.RatioFrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:ratio_height="400"
            app:ratio_width="640">

            <ImageView
                android:id="@+id/imageview_header"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop" />
        </com.sds.android.ttpod.common.widget.RatioFrameLayout>

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center|left|top"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="50.0dip"
            android:background="@drawable/xml_background_apshare_green"
            android:gravity="center"
            android:text="@string/share_share"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center|left|top"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/xml_background_apshare_blue"
            android:gravity="center"
            android:text="@string/share_receive_media"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tv_pc_send"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center|left|top"
            android:layout_marginBottom="50.0dip"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/xml_background_apshare_blue"
            android:gravity="center"
            android:text="@string/share_pc_send"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </LinearLayout>
</ScrollView>