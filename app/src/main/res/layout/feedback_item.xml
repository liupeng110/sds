<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8.0dip"
    android:paddingTop="8.0dip">

    <TextView
        android:id="@+id/tv_feedback_status"
        android:layout_width="80.0dip"
        android:layout_height="36.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18.0dip"
        android:gravity="center"
        android:text="@string/feedback_solved"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <RelativeLayout
        android:id="@+id/feedback_title_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_feedback_status">

        <com.sds.android.ttpod.common.widget.IconTextView
            android:id="@+id/new_flag"
            android:layout_width="8.0dip"
            android:layout_height="8.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:text="@string/icon_dot" />

        <TextView
            android:id="@+id/tv_feedback_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18.0dip"
            android:text="@string/app_name"
            android:textColor="#ff333333"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_feedback_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_title_group"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="@dimen/common_margin"
        android:text="@string/app_name"
        android:textColor="#ff999999"
        android:textSize="14.0sp" />
</RelativeLayout>