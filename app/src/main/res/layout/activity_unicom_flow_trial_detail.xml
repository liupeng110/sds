<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/unicom_flow_background_color"
    android:orientation="vertical"
    android:padding="10.0dip">

    <TextView
        android:id="@+id/unicom_trial_detail_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/unicom_trial_detail_phone"
        android:textColor="@color/unicom_flow_title_color"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/textview_flow_describe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:gravity="center"
        android:text="@string/unicom_trial_detail_msg"
        android:textColor="#ff666666"
        android:textSize="16.0sp" />

    <Button
        android:id="@+id/button_open"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/unicom_open_button"
        android:text="我要开通"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <include layout="@layout/activity_unicom_flow_faq" />
</LinearLayout>