<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/unicom_flow_background_color">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="30.0dip"
            android:gravity="center">

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="25.0dip"
                android:layout_marginRight="5.0dip"
                android:src="@drawable/icon_unicom_flow_open" />

            <TextView
                android:id="@+id/textview_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="3.0dip"
                android:text="已开通，下个月自动续费"
                android:textColor="#ff45c018"
                android:textSize="16.0sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="#ffe7e7e7" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:text="时刻为您节省流量"
            android:textColor="@color/unicom_flow_title_color"
            android:textSize="14.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="#fffeb641"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5.0dip"
                    android:text="本月累计消耗流量"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/textview_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#fffeb641"
                    android:gravity="center"
                    android:text="188.6MB"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:background="#ff3fc0ee"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center"
                    android:text="本月累计为您节省"
                    android:textColor="#ffffffff"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/textview_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="#ff3fc0ee"
                    android:gravity="center"
                    android:text="18.6元"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:text="节省流量仅供参考，实际流量以联通统计为准"
            android:textColor="@color/unicom_flow_title_color"
            android:textSize="14.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip">

            <Button
                android:id="@+id/button_share"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/unicom_open_button"
                android:text="分享给好友"
                android:textColor="#ffffffff"
                android:textSize="18.0sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25.0dip"
                android:background="#fff9f9f9"
                android:orientation="vertical"
                android:padding="10.0dip">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="流量订购状态"
                    android:textColor="#ff4f4f4f"
                    android:textSize="15.0sp" />

                <TextView
                    android:id="@+id/textview_begin_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:singleLine="true"
                    android:text="开启时间:"
                    android:textColor="#ff696969"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textview_finish_time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="终止时间:持续使用"
                    android:textColor="#ff696969"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textview_unsubscribe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="4.0dip"
                    android:clickable="true"
                    android:gravity="right"
                    android:text="详情及退订>>"
                    android:textColor="#ff9c9c9c"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/unicom_flow_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip">

            <ImageView
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2.0dip"
                android:src="@drawable/unicom_month_end_info" />

            <TextView
                android:id="@+id/textview_attention"
                android:layout_width="150.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="center|left"
                android:gravity="left"
                android:paddingLeft="10.0dip"
                android:paddingTop="6.0dip"
                android:text="注意事项 >>"
                android:textColor="#fff1605e"
                android:textSize="16.0dip" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>