<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_outer_matcher"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_matcher"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_gravity="center"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/xml_match_lrcpic_bkg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8.0dip"
        android:paddingRight="0.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="36.0dip">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:singleLine="true"
                android:text="正在OOXX，勿扰"
                android:textColor="#ffffffff"
                android:textSize="14.0sp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="2.0dip"
                android:indeterminate="false"
                android:max="100"
                android:progress="30"
                android:progressDrawable="@drawable/xml_progressbar_match_lyric_pic" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progress_bar"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="12/188"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_action"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_match_piclrc_close"
            android:text="begin" />
    </RelativeLayout>
</LinearLayout>