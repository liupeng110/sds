<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8.0dip"
    android:paddingTop="8.0dip">

    <RelativeLayout
        android:id="@+id/id_title_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="34.0dip">

        <View
            android:id="@+id/id_title_bar_left_line"
            android:layout_width="3.0dip"
            android:layout_height="20.0dip"
            android:layout_marginBottom="7.0dip"
            android:layout_marginTop="7.0dip" />

        <TextView
            android:id="@+id/id_text_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="11.0dip"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />

        <RelativeLayout
            android:id="@+id/layout_for_more"
            android:layout_width="80.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/xml_background_default">

            <TextView
                android:id="@+id/id_text_more"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="4.0dip"
                android:layout_toLeftOf="@+id/img_arrow_more"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#ffffffff"
                android:textSize="13.0sp" />

            <com.sds.android.ttpod.common.widget.IconTextView
                android:id="@+id/img_arrow_more"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8.0dip"
                app:text="@string/icon_arrow_right" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>