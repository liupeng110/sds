<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280.0dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/backgroundcolor_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6.0dip"
        android:background="@color/prompt" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip"
        android:text="@string/prompt"
        android:textColor="@color/prompt"
        android:textSize="20.0sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="@color/linecolor" />

    <LinearLayout
        android:layout_width="282.0dip"
        android:layout_height="90.0dip"
        android:layout_gravity="center"
        android:background="@drawable/cmmusic_page_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/listenorderseccess"
            android:textColor="#ff1f2d34"
            android:textSize="16.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="51.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_iknow_orderseccess"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:background="@drawable/cmmusic_button_background"
            android:gravity="center"
            android:text="@string/iknow"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_setdefault_orderseccess"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:background="@drawable/cmmusic_button_background"
            android:gravity="center"
            android:text="@string/setdefaultlisten"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>