<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_mediascan_autoscan_listview_footer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_mediascan_autoscan_add"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:background="@drawable/xml_background_layout_border"
        android:contentDescription="@string/ttpod"
        android:padding="12.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/img_imageview_mediascan_auto_scan_item_add" />

    <TextView
        android:id="@+id/textview_mediascan_setting_auto_scan_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/mediascan_setting_auto_scan_tips"
        android:textColor="#ffacacac"
        android:textSize="14.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:listPreferredItemHeight"
        android:paddingBottom="10.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="10.0dip">

        <TextView
            android:id="@+id/textview_mediascan_setting_auto_scan_start"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/xml_background_button_blue"
            android:gravity="center"
            android:text="@string/mediascan_setting_auto_scan_start"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </LinearLayout>
</LinearLayout>