<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="4.0dip"
    android:paddingRight="4.0dip"
    android:paddingTop="8.0dip"
    android:weightSum="2.0">

    <com.sds.android.ttpod.widget.RatioRelativeLayout
        android:id="@+id/button_toggle_background_manager"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_weight="1.0"
        android:background="@color/recomm_day_of_week_color"
        app:ratio_height="32"
        app:ratio_width="50">

        <com.sds.android.ttpod.common.widget.IconTextView
            android:id="@+id/itv_bkg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6.0dip"
            android:layout_marginLeft="4.0dip"
            app:text="@string/icon_theme_background"
            app:textColor="#ffffffff"
            app:textSize="20.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itv_bkg_text"
            android:layout_marginBottom="-1.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@+id/itv_bkg_text"
            android:text="@string/beautiful_background"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </com.sds.android.ttpod.widget.RatioRelativeLayout>

    <com.sds.android.ttpod.widget.RatioRelativeLayout
        android:id="@+id/button_toggle_theme_rank"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_weight="1.0"
        android:background="@color/effect_blue"
        app:ratio_height="32"
        app:ratio_width="50">

        <com.sds.android.ttpod.common.widget.IconTextView
            android:id="@+id/itv_rank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6.0dip"
            android:layout_marginLeft="4.0dip"
            app:text="@string/icon_theme_rank"
            app:textColor="#ffffffff"
            app:textSize="20.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/itv_rank_text"
            android:layout_marginBottom="-1.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@+id/itv_rank_text"
            android:text="@string/theme_rank"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </com.sds.android.ttpod.widget.RatioRelativeLayout>
</LinearLayout>