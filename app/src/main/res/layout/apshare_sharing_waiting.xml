<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.sds.android.ttpod.common.widget.RatioFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ratio_height="3"
        app:ratio_width="4">

        <com.sds.android.ttpod.widget.SignalView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="34.0dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/img_apshare_phone" />
    </com.sds.android.ttpod.common.widget.RatioFrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:gravity="center"
        android:padding="10.0dip"
        android:text="@string/share_prompt_title"
        android:textColor="@color/apshare_text_color_blue"
        android:textSize="20.0sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.0dip"
        android:gravity="center"
        android:padding="10.0dip"
        android:text="@string/share_prompt_subtitle"
        android:textColor="@android:color/darker_gray"
        android:textSize="16.0sp" />
</LinearLayout>