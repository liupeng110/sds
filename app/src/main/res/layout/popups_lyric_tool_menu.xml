<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:background="@drawable/img_lyric_menu_bg"
    android:orientation="vertical"
    android:paddingBottom="40.0dip"
    android:paddingTop="40.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_weight="3.0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lyric_font_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/img_lyric_font_set" />

        <ImageView
            android:id="@+id/lyric_color_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/img_lyric_color_highlight" />

        <ImageView
            android:id="@+id/lyric_switch_trc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/xml_lyric_kala_on_off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_weight="3.0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lyric_slow_down"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/img_lyric_slow_down" />

        <ImageView
            android:id="@+id/lyric_reset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/img_lyric_show_reset" />

        <ImageView
            android:id="@+id/lyric_slow_up"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/xml_background_dialog_button_variable"
            android:clickable="true"
            android:paddingBottom="10.0dip"
            android:paddingTop="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/img_lyric_slow_up" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete_lyric"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/xml_background_dialog_button_variable"
        android:clickable="true"
        android:paddingBottom="4.0dip"
        android:paddingTop="10.0dip"
        android:scaleType="centerInside"
        android:src="@drawable/img_delete_lyric" />
</LinearLayout>