<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280.0dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cmmusic_page_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6.0dip"
        android:background="@color/prompt" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150.0dip"
            android:layout_height="60.0dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:text="@string/openfuctionprompt"
                android:textColor="@color/prompt"
                android:textSize="20.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6.0dip"
                android:paddingLeft="10.0dip"
                android:paddingTop="4.0dip"
                android:text="@string/openfuctionmsg"
                android:textColor="@color/prompt"
                android:textSize="12.0dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/cmmusic_open_fuciton_title_ico" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="282.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/cmmusic_page_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:background="@color/linecolor" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/opencailingfuncionorder"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/text_coloropenprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24.0dip"
            android:paddingLeft="10.0dip"
            android:text="@string/promptprompt"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:text="@string/promptopen"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4.0dip"
            android:paddingLeft="10.0dip"
            android:text="@string/promptinfo"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10.0dip"
            android:paddingLeft="10.0dip"
            android:text="@string/cmmusichelp"
            android:textColor="#ff1f2d34"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="51.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_opencailing"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:background="@drawable/cmmusic_button_background"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_confirm_opencailing"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:background="@drawable/cmmusic_button_background"
            android:gravity="center"
            android:text="@string/open"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>