<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_select_head_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="5.0dip">

        <View
            android:id="@+id/select_head_icon"
            android:layout_width="3.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:background="#ff62d6ff" />

        <TextView
            android:id="@+id/select_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_weight="1.0"
            android:text="热门频道"
            android:textColor="#ff404040"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/select_head_2_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/img_select_head_more"
            android:gravity="center"
            android:paddingBottom="5.0dip"
            android:paddingLeft="@dimen/app_space"
            android:paddingRight="@dimen/app_space"
            android:paddingTop="5.0dip"
            android:text="更多 "
            android:textColor="#ff6b6b6b"
            android:textSize="15.0sp"
            android:visibility="invisible" />
    </LinearLayout>

    <com.ttfm.android.sdk.view.NoScrollListView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/fm_divider_color"
        android:dividerHeight="1.0px" />

    <View
        android:id="@+id/select_head_2_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/fm_divider_color" />
</LinearLayout>