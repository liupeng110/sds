<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280.0dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cmmusic_page_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6.0dip"
        android:background="@color/prompt" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60.0dip"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10.0dip"
                android:paddingTop="10.0dip"
                android:singleLine="true"
                android:text="@string/sendsmsprompttitle"
                android:textColor="@color/prompt"
                android:textSize="18.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6.0dip"
                android:paddingLeft="10.0dip"
                android:paddingTop="4.0dip"
                android:singleLine="true"
                android:text="@string/sendsmspromptexplain"
                android:textColor="@color/prompt"
                android:textSize="12.0dip" />
        </LinearLayout>

        <ImageView
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/cmmusic_open_fuciton_title_ico" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="282.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/cmmusic_page_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2.0px"
            android:background="@color/linecolor" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:singleLine="true"
            android:text="@string/sendsmspromptcontent"
            android:textColor="#ff1f2d34"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:singleLine="true"
            android:text="@string/sendsmspromptcontent1st"
            android:textColor="#ff1f2d34"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:singleLine="true"
            android:text="@string/sendsmspromptcontent2nd"
            android:textColor="#ff1f2d34"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:paddingTop="4.0dip"
            android:singleLine="true"
            android:text="@string/sendsmspromptcontent3rd"
            android:textColor="#ff1f2d34"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="51.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_iknow_lintencontentpage"
            android:layout_width="fill_parent"
            android:layout_height="52.0dip"
            android:background="@drawable/cmmusic_button_background"
            android:gravity="center"
            android:text="@string/iknow"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>