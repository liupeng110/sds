<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff1d1f1f">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23.0dip"
            android:src="@drawable/recommends_effect_nodata_cry_face" />

        <TextView
            style="@style/TextView_Effect_Recommends_Effect_Nodata"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0dip"
            android:paddingLeft="0.0dip"
            android:text="@string/string_no_share_tip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40.0dip"
            android:layout_marginTop="30.0dip"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="0.0dip"
                android:text="@string/string_effect_tip"
                android:textColor="@color/effect_gray"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_effect_correct"
                android:textColor="@color/effect_gray"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_effect_wait_share"
                android:textColor="@color/effect_gray"
                android:textSize="14.0sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_left_scrolling"
                    android:textColor="@color/effect_gray"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_adjust_effect"
                    android:textColor="#ff34a7d2"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginTop="7.0dip"
                android:src="@drawable/img_background_imageview_effect_help_small"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>