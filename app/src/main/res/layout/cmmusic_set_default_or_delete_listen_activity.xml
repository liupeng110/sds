<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280.0dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/cmmusic_page_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6.0dip"
        android:background="#ff58aef3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="10.0dip"
        android:text="@string/setting"
        android:textColor="#ff58aef3"
        android:textSize="20.0sp" />

    <LinearLayout
        android:layout_width="282.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-1.0dip"
        android:background="@drawable/cmmusic_setbag_background"
        android:gravity="center">

        <TextView
            android:id="@+id/text_prompt_setdefaultpage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:paddingBottom="35.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="35.0dip"
            android:textColor="@color/prompt_textcolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="51.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_setdefault_cancel"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:layout_gravity="center"
            android:background="@drawable/cmmusic_button_background"
            android:text="@string/cancel"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />

        <Button
            android:id="@+id/btn_setdefault_submit"
            android:layout_width="141.0dip"
            android:layout_height="52.0dip"
            android:layout_gravity="center"
            android:background="@drawable/cmmusic_button_background"
            android:text="@string/confirm"
            android:textColor="@color/prompt_textcolor"
            android:textSize="16.0sp" />
    </LinearLayout>
</LinearLayout>