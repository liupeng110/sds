<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/select_list_item_img"
        android:layout_width="fill_parent"
        android:layout_height="95.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/img_channel_default_mini" />

    <ImageView
        android:id="@+id/select_list_item_tip"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:scaleType="fitXY"
        android:src="@drawable/img_select_tip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/select_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_list_item_img"
        android:layout_marginTop="5.0dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="天天电台频道天天电台频道天天电台频道天天电台频道天天电台频道"
        android:textColor="#ff404040"
        android:textSize="13.0sp" />

    <ImageView
        android:id="@+id/select_list_item_play"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:layout_above="@+id/select_list_item_title"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@drawable/btn_select_channel_play" />
</RelativeLayout>