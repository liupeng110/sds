<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10.0dip">

    <com.sds.android.ttpod.widget.RoundedImageView
        android:id="@+id/item_picture"
        android:layout_width="fill_parent"
        android:layout_height="180.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background_song_publish"
        app:Image_border_color="@color/rounded_image_corner"
        app:Image_border_width="@dimen/rounded_image_border"
        app:corner_radius="4.0dip"
        app:image_ratio="1.0" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_picture"
        android:layout_alignRight="@+id/item_picture"
        android:layout_below="@+id/item_picture"
        android:layout_marginTop="5.0dip"
        android:singleLine="true"
        android:textColor="#ff444a50"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/item_artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_picture"
        android:layout_alignRight="@+id/item_picture"
        android:layout_below="@+id/item_name"
        android:layout_marginTop="2.0dip"
        android:singleLine="true"
        android:textColor="#ffa1a4a7"
        android:textSize="12.0sp" />
</RelativeLayout>