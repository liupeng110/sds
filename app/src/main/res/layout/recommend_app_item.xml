<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_app_logo"
        android:layout_width="38.0dip"
        android:layout_height="38.0dip"
        android:layout_marginLeft="@dimen/common_margin_big"
        android:layout_marginRight="@dimen/common_margin_big" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/app_info_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#ff333333"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tv_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:ellipsize="end"
                android:gravity="bottom"
                android:lines="1"
                android:textColor="#ff999999"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/app_download_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="3.0dip"
            android:layout_marginTop="@dimen/common_padding_small"
            android:max="100"
            android:progressDrawable="@drawable/xml_progressbar_download_item"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_app_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_small"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#ffa8a8a8"
            android:textSize="12.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="76.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_big"
        android:layout_marginRight="@dimen/common_margin_big"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5.0dip"
        android:paddingLeft="@dimen/common_padding_small"
        android:paddingRight="@dimen/common_padding_small"
        android:paddingTop="5.0dip"
        android:textSize="12.0sp" />
</LinearLayout>