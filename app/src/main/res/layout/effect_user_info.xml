<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.sds.android.ttpod.widget.RoundedImageView
        android:id="@+id/image_avatar"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:contentDescription="@android:string/unknownName"
        android:scaleType="fitCenter"
        android:src="@drawable/img_avatar_default"
        app:Image_border_color="#ff333333"
        app:Image_border_width="3.0dip" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8.0dip">

        <TextView
            android:id="@+id/textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="20.0dip" />

        <TextView
            android:id="@+id/textview_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_username"
            android:gravity="center_vertical"
            android:paddingTop="3.0dip"
            android:text=""
            android:textColor="#ff959595"
            android:textSize="13.0dip" />

        <ImageView
            android:id="@+id/imageview_level"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignBottom="@+id/textview_username"
            android:layout_marginLeft="4.0dip"
            android:layout_toRightOf="@+id/textview_username"
            android:src="@drawable/img_effect_level_normal" />
    </RelativeLayout>
</LinearLayout>