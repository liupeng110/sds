<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.sds.android.ttpod.framework.modules.skin.view.ModifyFitCenterImageView
        android:id="@+id/iv_mv"
        android:layout_width="@dimen/mv_thumbnail_width"
        android:layout_height="@dimen/mv_thumbnail_height"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="5.0dip"
        android:contentDescription="@string/ttpod"
        android:scaleType="fitCenter"
        android:src="@drawable/img_mv_default_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginBottom="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:layout_toRightOf="@+id/iv_mv"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8.0dip">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="200.0dip"
            android:singleLine="true"
            android:text="abc"
            android:textColor="#ff6c6c6c"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="4.0dip"
            android:text="def"
            android:textColor="#ffacacac"
            android:textSize="12.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="200.0dip"
                android:singleLine="true"
                android:text="abc"
                android:textColor="#ffacacac"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/tv_danmaku_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:maxLines="3"
                android:paddingTop="4.0dip"
                android:text="def"
                android:textColor="#ffacacac"
                android:textSize="12.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>