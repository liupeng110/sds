<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="8.0dip"
    android:layout_weight="1.0">

    <com.sds.android.ttpod.widget.RoundedImageView
        android:id="@+id/image_mv_pic"
        style="@style/MV_RoundedImageView"
        app:corner_radius="4.0dip"
        app:image_ratio="1.76" />

    <TextView
        android:id="@+id/textview_mv_quality"
        style="@style/MV_TextView_Quality" />

    <LinearLayout
        android:layout_width="70.0dip"
        android:layout_height="17.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10.0dip"
        android:background="@drawable/background_mv_category_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip">

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <com.sds.android.ttpod.common.widget.IconTextView
            android:id="@+id/icon_text_play_icon"
            android:layout_width="wrap_content"
            android:layout_height="10.0dip"
            android:layout_marginRight="4.0dip"
            app:text="@string/icon_playbar_play"
            app:textColor="#ffffffff" />

        <TextView
            android:id="@+id/text_mv_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23万"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_mv_title"
        style="@style/MV_TextView_Title"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_mv_pic"
        android:text="第87界奥斯卡提名开场秀" />

    <TextView
        android:id="@+id/text_mv_singer"
        style="@style/MV_TextView_SubTitle"
        android:layout_below="@+id/text_mv_title"
        android:paddingBottom="10.0dip"
        android:text="欧美群星" />
</RelativeLayout>